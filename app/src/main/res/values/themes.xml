<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Artistbrainz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="badgeStyle">@style/BookmarksBadgeStyle</item>

        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="android:textColor">@color/textColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.Artistbrainz.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BookmarksBadgeStyle">
        <item name="backgroundColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ArchitectureTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArchitectureTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
